{
    "name": "iterable-observer",
    "version": "1.0.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "Observable Proposal implement based on Async Generator (ES 2018) & TypeScript",
    "keywords": [
        "observer",
        "observable",
        "proposal",
        "typescript",
        "async",
        "generator",
        "iterator"
    ],
    "homepage": "https://web-cell.dev/iterable-observer/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/iterable-observer.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/iterable-observer/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "module": "dist/index.esm.js",
    "main": "dist/index.js",
    "dependencies": {
        "@swc/helpers": "^0.4.14"
    },
    "devDependencies": {
        "@parcel/packager-ts": "~2.8.3",
        "@parcel/transformer-typescript-types": "~2.8.3",
        "@types/jest": "^29.5.2",
        "@types/node": "^16.18.34",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "open-cli": "^7.2.0",
        "parcel": "~2.8.3",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "typedoc": "^0.24.8",
        "typedoc-plugin-mdn-links": "^3.0.3",
        "typescript": "~5.1.3"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,ts}": "prettier --write"
    },
    "jest": {
        "preset": "ts-jest",
        "testTimeout": 8000
    },
    "browserslist": "> 0.5%, last 2 versions, not dead, IE 11",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged  &&  jest --no-cache",
        "pack-docs": "typedoc source/",
        "build": "rm -rf dist/ docs/  &&  parcel build  &&  npm run pack-docs",
        "start": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    }
}
